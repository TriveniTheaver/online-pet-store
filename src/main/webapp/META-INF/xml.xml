	    <servlet-name>AddToCartServlet</servlet-name>
	    <url-pattern>/AddToCartServlet</url-pattern>
	</servlet-mapping>
		
	<filter>
    <filter-name>CheckoutFilter</filter-name>
    <filter-class>EstorePackage.CheckoutFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>CheckoutFilter</filter-name>
    <url-pattern>/Order.jsp</url-pattern>
</filter-mapping>

